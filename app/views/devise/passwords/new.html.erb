<% @page_title = "Forgot your password?" %>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "required_form_bottom" }) do |f| %>
	
	<%= format_message(devise_error_messages!) %>

	<div class="table first_cell_right first_cell_valign full_width_table_on_mobile">
		<div class="tr">
			<div class="td"><%= f.label :email %></div>
			<div class="td"><%= f.email_field :email, autofocus: true, :class => "required" %></div>
		</div>
		<div class="tr">
			<div class="td"></div>
			<div class="td"><%= f.submit "Submit", :class => "btn" %></div>
		</div>
	</div>

<% end %>

<%= render "devise/shared/links" %>
