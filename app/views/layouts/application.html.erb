<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge" />
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

	<title>Teashelf</title>
	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	<link href='//fonts.googleapis.com/css?family=Abel' rel='stylesheet' type='text/css'>
	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	<%= csrf_meta_tags %>
	<script>
	(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
	(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
	m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
	})(window,document,'script','//www.google-analytics.com/analytics.js','ga');

	ga('create', 'UA-75467448-1', 'auto');
	//ga('send', 'pageview');

	</script>
</head>

<body <% if session[:night_mode] == "on" %>class="night_mode"<% end %>>
	<% if Rails.env.production? %>
	  <script>ga('send', 'pageview');</script>
	<% end %>
	<!--<div class='sidebar'>
		<%# render 'layouts/teafinder/header' %>
	</div>-->

	<div id="master_frame_container">
			
		<!--<a href="javascript:;" class='menu_button'><%# image_tag "btn_menu.png" %></a>-->

			<%= render 'layouts/header' %>
		
		<% if !request.fullpath.include? "user" %>
			<%= render 'layouts/nav' %>
		<% end 	%>

		<div class="page_title_sec">
			<span class="page_title">
				<%= @page_title %>
			</span>
			<span class="page_title_extra">
				<%= @page_title_extra %>
			</span>
		</div>

		<% if notice %>
			<%= format_message(notice,"success") %>
		<% end %>
		
		<% if alert %>
		  <%= format_message(alert) %>
		<% end %>

		<div class="content clearfix">
			<%= yield %>			
		</div>

		<%= render 'layouts/footer' %>

	</div>

</body>
</html>
