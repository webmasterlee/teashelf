<% @page_title = "Change your password" %>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "js_change_password_form" }) do |f| %>
  
  <%= format_message(devise_error_messages!) %>
  
  <%= f.hidden_field :reset_password_token %>

  <div class="table first_cell_right first_cell_valign full_width_table_on_mobile">
  	<div class="tr">
  		<div class="td"><%= f.label :password, "New password" %></div>
  		<div class="td"><%= f.password_field :password, placeholder: "8 or more characters", autofocus: true, autocomplete: "off", :class => "required" %></div>
  	</div>
  	<div class="tr">
  		<div class="td"><%= f.label :password_confirmation, "Confirm new password" %></div>
  		<div class="td"><%= f.password_field :password_confirmation, autocomplete: "off", :class => "required" %></div>
  	</div>
  	<div class="tr">
  		<div class="td"></div>
  		<div class="td"><%= f.submit "Update", :class => "btn" %></div>
  	</div>
  </div>

<% end %>

<%= render "devise/shared/links" %>
