<%= form_for @att, html: {class: "required_form_bottom"} do |f| %>

  <%= format_message(@att.errors.full_messages) %>

  <div class="table first_cell_right first_cell_valign full_width_table_on_mobile">
    <div class="tr">
      <div class="td"><%= f.label :name %></div>
      <div class="td"><%= f.text_field :name, autofocus: true, :placeholder => 'ex. Flavored, Gaiwan', :class => "required" %></div>
    </div>

    <div class="tr">
      <div class="td"></div>
      <div class="td"><%= f.submit "Save", :class => "btn" %></div>
    </div>
  </div>

<% end %>

<br/>
